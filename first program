#Bitwise operator
# --> & | ^ ~ >> <<
print(4&5)
 #  4-->0100  5-->0101  which is obtain by LCM
 # --> for & we hava to multiply 4 and 5 0 1 0 0
  # -->                                  0 1 0 1
   # -->                                ---------
    # -->                                0 1 0 0--->4
     # -->output is 4
print(4|5)
 #  4-->0100  5-->0101  which is obtain by LCM
 # --> for | we hava to add 4 and 5      0 1 0 0
  # -->                                  0 1 0 1
   # -->                                ---------
    # -->                                0 1 0 1--->5
     # -->output is 5
print(4^5) #-->exor-->same value 0 different value 1
 #  4-->0100  5-->0101  which is obtain by LCM
 # --> for & we hava to multiply 4 and 5 0 1 0 0
  # -->                                  0 1 0 1
   # -->                                ---------
    # -->                                0 0 0 1--->1
     # -->output is 1
print(~10)
 
     # -->output is -11
     
#shift operatator
# << >>
print(10<<1)
print(10<<2)
print(10<<3)
print(10>>1)
print(10>>2)
print(10>>3)


#logical operator
print(5 or 4)
print(5 and 4)

